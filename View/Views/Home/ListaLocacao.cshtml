@model IEnumerable<Model.Locacao>

@{
    ViewBag.Title = "ListaLocacao";
}

<h2>Locações</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index", "Home/inserirLocacao")"
               class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Novo Cliente</span>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th >@Html.DisplayNameFor(model => model.Nome)</th>
                        <th> @Html.DisplayNameFor(model => model.NomeFilme)</th>
                        <th> @Html.DisplayNameFor(model => model.DataLocacao)</th>
                        <th>@Html.DisplayNameFor(model => model.DataEntrega)</th>
                        <th>@Html.DisplayNameFor(model => model.ValorLocacao)</th>
                        <th>@Html.DisplayNameFor(model => model.NomeFuncionario)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.NomeFilme)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataLocacao)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataEntrega)</td>
                        <td>@Html.DisplayFor(modelItem => item.ValorLocacao)</td>
                        <td>@Html.DisplayFor(modelItem => item.NomeFuncionario)</td>
                        <td class="text-center">

                            <a href="@Url.Action("EditarLocacao", "Home", new { id = item.IdLocacao })" class="btn btn-success btn-circle btn-sm">
                                <i class="fas fa-pencil-alt"></i>
                            </a>

                            <a href="@Url.Action("VisualizarLocacao", "Home", new { id = item.IdLocacao })" class="btn btn-warning btn-circle btn-sm">
                                <i class="fas fa-info"></i>
                            </a>

                            <button class="btn btn-danger btn-circle btn-sm delete" data-id="@item.IdLocacao"><i class="fas fa-trash"></i></button>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<div class="modal" id="modal3">

</div>
