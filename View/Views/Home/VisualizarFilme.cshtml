@model Model.Filme

@{
    ViewBag.Title = "VisualizarFilme";
}

<h2>Detalhes do Filme</h2>

    <hr />
    <div class=" o-hidden border-0">
        <div class="row">
            <div class="col-xl-4 col-lg-5" style="max-width:500px; max-height:800px;">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                        <div class="text-gray-800">
                            <h3 style="margin-top: 10px">@Html.DisplayFor(model => model.NomeFilme)</h3>
                        </div>
                    </div>

                    <!-- Card Body -->
                    @{
                        var base64 = Convert.ToBase64String(Model.Cartaz);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }

                    <img class="gui-card__img" src='@imgSrc' />
                </div>
            </div>
            <div class="col-xl-4 col-lg-5">
                <dl class="dl-horizontal">


