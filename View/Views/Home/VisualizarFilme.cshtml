                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NomeFilme)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Sinopse)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Sinopse)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TempoDuracao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TempoDuracao)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Ano)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Ano)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.GeneroFilme)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GeneroFilme)
                    </dd>
                                       
                    <dt>
                        @Html.DisplayNameFor(model => model.Classifica)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Classifica)
                    </dd>

                    <dt>
